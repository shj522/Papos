        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size"
                android:typeface="normal" />

            <Spinner
